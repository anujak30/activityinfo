<!-- This is a specialized build for 
     Mozilla Web Apps. Credentials are loaded from the receipt
     provided at install
  -->

<module rename-to="ActivityInfoMozApp">

    <inherits name="org.activityinfo.ActivityInfo"/>

    <!-- ie6, gecko, gecko1_8, safari or opera -->
    <set-property name="user.agent" value="gecko1_8"/>
    <set-property name="locale" value="en"/>
    
    <set-property name="gwt.logging.logLevel" value="FINEST"/>    
 	<set-property name="compiler.stackMode" value="emulated" /> 
 	<set-configuration-property name="compiler.emulatedStack.recordLineNumbers" 
 		value="true" /> 
 	<set-configuration-property name="compiler.emulatedStack.recordFileNames" 
 		value="true" />  
 		
    
    <entry-point class="org.activityinfo.client.MozAppEntryPoint"/>

</module>
